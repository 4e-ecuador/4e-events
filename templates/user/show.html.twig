{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="btn-group float-right">
        <a class="btn btn-outline-success" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
        {{ include('user/_delete_form.html.twig') }}
        <a class="btn btn-outline-secondary" href="{{ path('user_index') }}">back to list</a>
    </div>
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Telegram_id</th>
                <td>{{ user.telegramId }}</td>
            </tr>
            <tr>
                <th>Is_verified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
